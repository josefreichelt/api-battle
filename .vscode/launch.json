    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch",
            "cargo": {
                "args": ["build", "--manifest-path=rust/Cargo.toml"]
            },
            "args": [],
            "cwd": "${workspaceFolder}/rust"
        },

        {
            "name": "Launch Go",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "go",
            "program": "${workspaceFolder}/go/main.go",
            "console": "integratedTerminal",
        }
    ]
}
